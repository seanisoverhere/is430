// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model business {
  uuid     Int       @id @default(autoincrement())
  email    String
  password String
  payment  payment[]
}

model supplier {
  uuid     Int       @id @default(autoincrement())
  email    String
  password String
  payment  payment[]
}

model payment {
  paymentId     Int            @id @default(autoincrement())
  paymentDate   DateTime
  dueDate       DateTime
  totalAmount   Decimal
  paymentStatus String
  payer         business       @relation(fields: [payerId], references: [uuid])
  payerId       Int
  receiver      supplier       @relation(fields: [receiverId], references: [uuid])
  receiverId    Int
  paymentSplit  paymentSplit[]
}

model paymentSplit {
  splitLoanId   Int      @id @default(autoincrement())
  paymentDate   DateTime
  paymentStatus String
  paymentAmount Decimal
  mainPayment   payment  @relation(fields: [mainPaymentId], references: [paymentId])
  mainPaymentId Int
}
