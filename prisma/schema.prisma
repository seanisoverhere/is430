// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model business {
  uuid        Int       @id @default(autoincrement())
  email       String?
  password    String?
  companyName String?
  uenNo       String?
  aggScore    Decimal?  @db.Decimal(10, 2)
  payment     payment[]
  invoice     invoice[]
}

model supplier {
  uuid        Int       @id @default(autoincrement())
  email       String?
  password    String?
  companyName String?
  uenNo       String?
  payment     payment[]
  invoice     invoice[]
}

model invoice {
  invoiceId  String    @id
  amount     Decimal?  @db.Decimal(10, 2)
  receiver   supplier? @relation(fields: [receiverId], references: [uuid])
  receiverId Int?
  payer      business? @relation(fields: [payerId], references: [uuid])
  payerId    Int?
  payment    payment[]
}

model payment {
  paymentId     Int            @id @default(autoincrement())
  paymentDate   DateTime?
  dueDate       DateTime?
  totalAmount   Decimal?
  paymentStatus String?
  payer         business?      @relation(fields: [payerId], references: [uuid])
  payerId       Int?
  receiver      supplier?      @relation(fields: [receiverId], references: [uuid])
  receiverId    Int?
  invoice       invoice?       @relation(fields: [invoiceId], references: [invoiceId])
  invoiceId     String?
  paymentSplit  paymentSplit[]
}

model paymentSplit {
  splitLoanId   Int       @id @default(autoincrement())
  paymentDate   DateTime?
  paymentStatus String?
  paymentAmount Decimal?
  mainPayment   payment?  @relation(fields: [mainPaymentId], references: [paymentId])
  mainPaymentId Int?
}
